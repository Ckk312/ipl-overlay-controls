{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "flavorText": {
            "type": "string"
        },
        "colorInfo": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "index": {
                    "type": "number"
                },
                "title": {
                    "type": "string"
                },
                "clrA": {
                    "type": "string"
                },
                "clrB": {
                    "type": "string"
                },
                "categoryName": {
                    "type": "string"
                }
            },
            "required": ["index", "title", "clrA", "clrB", "categoryName"]
        },
        "swapColorOrder": {
            "type": "boolean"
        },
        "teamAInfo": {
            "type": "object",
            "$ref": "defs/team.json#/team"
        },
        "teamBInfo": {
            "type": "object",
            "$ref": "defs/team.json#/team"
        }
    },
    "default": {
        "flavorText": "Flavor Text!",
        "colorInfo": {
            "index": 0,
            "title": "Green vs Grape",
            "clrA": "#37FC00",
            "clrB": "#7D28FC",
            "categoryName": "Ranked Modes"
        },
        "swapColorOrder": false,
        "teamAInfo": {
            "id": "AAA",
            "name": "Placeholder Team A",
            "players": [
                {
                    "name": "Player 1"
                },
                {
                    "name": "Player 2"
                }
            ]
        },
        "teamBInfo": {
            "id": "BBB",
            "name": "Placeholder Team B",
            "players": [
                {
                    "name": "Player 3"
                },
                {
                    "name": "Player 4"
                }
            ]
        }
    }
}
