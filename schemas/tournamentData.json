{
    "$schema": "http://json-schema.org/draft-07/schema",

    "definitions": {
        "player": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "team": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "logoUrl": {
                    "type": "string"
                },
                "players": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/player"
                    }
                }
            },
            "additionalProperties": true
        }
    },

    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                }
            }
        },
        "data": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/team"
            }
        }
    },
    "additionalItems": true,
    "default": {
        "meta": {
            "id": "none"
        },
        "data": [
            {
                "id": "AAA",
                "name": "Placeholder Team A",
                "players": [
                    {
                        "name": "Player 1"
                    },
                    {
                        "name": "Player 2"
                    }
                ]
            },
            {
                "id": "BBB",
                "name": "Placeholder Team B",
                "players": [
                    {
                        "name": "Player 3"
                    },
                    {
                        "name": "Player 4"
                    }
                ]
            }
        ]
    }
}
