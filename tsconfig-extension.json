{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "nodecg/*": [
                "../../types/*"
            ],
            "types/*": [
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/extension/**/*.ts",
        "src/types/**/*.d.ts",
        "../../types/server.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
