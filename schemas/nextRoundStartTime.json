{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "hour": {
            "type": "number"
        },
        "minute": {
            "type": "number"
        },
        "day": {
            "type": "number"
        },
        "month": {
            "type": "number"
        },
        "isVisible": {
            "type": "boolean"
        }
    },
    "required": ["hour", "minute", "day", "month"],
    "default": {
        "hour": 0,
        "minute": 0,
        "day": 1,
        "month": 1,
        "isVisible": false
    }
}
